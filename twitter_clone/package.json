{
  "name": "twitter_clone",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:docker": "next dev",
    "lint:next": "next lint",
    "lint:staged": "eslint **/*.{js,jsx,ts,tsx} --fix --cache",
    "format": "prettier --check --ignore-path .gitignore ./src/**/*.{js,jsx,ts,tsx}",
    "format:fix": "prettier --ignore-path .gitignore --check --write ./src/**/*.{js,jsx,ts,tsx}",
    "test": "jest --passWithNoTests --color",
    "test:docker": "npm run test:dev",
    "test:dev": "jest --watchAll --coverage --passWithNoTests --color",
    "test:staged": "jest --passWithNoTests --findRelatedTests --color",
    "test:coverage": "jest --coverage --passWithNoTests --color",
    "test:cypress": "cypress open",
    "test:E2E": "cypress run",
    "husky:prepare": "cd ../ && husky install",
    "code:ci": "npm run format:fix && next lint && npm run lint:staged && npm run test:coverage"
  },
  "dependencies": {
    "@types/node": "20.4.2",
    "@types/react": "18.2.15",
    "@types/react-dom": "18.2.7",
    "autoprefixer": "10.4.14",
    "eslint": "8.45.0",
    "eslint-config-next": "13.4.11",
    "next": "13.4.11",
    "postcss": "8.4.27",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.3.3",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "cypress": "^12.17.2",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0"
  }
}
